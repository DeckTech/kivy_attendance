WindowManager:
    MainScreen:
    SecondScreen:
    ServerList:
    ProfileScreen:


<MainScreen>:
    name: "main"
    MDScreen:
        MDLabel:
            halign: 'center'
            text: 'DeckTech'
        MDFloatLayout:
            MDRaisedButton:
                text: 'Continue'
                size_hint: (1,None)
                pos_hint: {'x': 0, 'y': 0.02}
                height: "100dp"
                on_release:
                    root.check_file_exists()



<SecondScreen>:
    name: "second"
    first_name:first_name
    last_name:last_name
    reg_no:reg_no
    department:department
    user_password:user_password
    MDScreen:
        MDScrollView:
            MDGridLayout:
                rows: 10
                cols: 1
                row_default_height: "20dp"
                row_force_default: True
                spacing: 20
                padding: [10,10]

                MDLabel:
                    text: 'First Name'
                MDTextField:
                    id: first_name
                    mode: 'line'
                    multiline: False

                MDLabel:
                    text: 'Last Name'
                MDTextField:
                    id: last_name
                    multiline: False
                    mode: 'line'

                MDLabel:
                    text: 'Regstration Number'
                MDTextField:
                    id:reg_no
                    mode: 'line'
                    multiline: False

                MDLabel:
                    text: 'Department'
                MDTextField:
                    id:department
                    mode: 'line'
                    multiline: False

                MDLabel:
                    text: 'Password'
                MDTextField:
                    id:user_password
                    mode: 'line'
                    multiline: False
                    password: True
                    password_mask:'*'


        MDFloatLayout:
            MDFillRoundFlatButton:

                text: 'Go Back'
                size_hint: (0.45,None)
                height: "50dp"
                pos_hint: {'x':0.025 , 'y':0.025 }
                on_release:
                    app.root.current = "main"
                    root.manager.transition.direction = "down"

            MDFillRoundFlatButton:

                text: 'Next'
                size_hint: (0.45,None)
                height: "50dp"
                pos_hint: {'x':0.525 , 'y':0.025 }
                on_release:
                    root.next()


<ProfileScreen>:
    name:"profile"
    MDFloatLayout:
        MDIconButton:
            text: 'ben'
            icon: 'magnify'
            pos_hint: {'center_x':0.9 , 'center_y':0.05 }
            on_release:
                app.root.current ="server_list"
                root.manager.transition.direction = "left"


<ServerList>:
    name:"server_list"
    on_enter:
        root.load_servers()

    MDScrollView:

        MDFloatLayout:
            MDIconButton:
                icon: 'arrow-left'
                pos_hint: {'center_x':0.05 , 'center_y':0.95 }
                padding: 20
                on_release:
                    app.root.current ="profile"
                    root.manager.transition.direction = "right"
            MDIconButton:
                icon: 'refresh'
                padding: 30
                pos_hint: {'center_x':0.91 , 'center_y':0.95 }
